<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/countryLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="201dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/countryOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryNew"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text=""
        android:textColor="#a7a11b"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-7dp"
        android:gravity="center"
        android:text="United States"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/countryNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="Positive Increase loading..."
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/countryDeath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryNew"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Death Increase loading..."
        android:textColor="#E1341E"
        android:textSize="25sp" />

    <ir.farshid_roohi.linegraph.LineChart
        android:id="@+id/lineChart"
        android:layout_width="wrap_content"
        android:layout_height="208dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="266dp"
        android:orientation="vertical"
        app:chart_bg_color="#FF2B4A83"
        app:chart_line_color="#32FFFFFF"
        app:chart_padding_bottom="35dp"
        app:chart_padding_left="20dp"
        app:chart_padding_right="20dp"
        app:chart_padding_top="20dp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="?android:attr/windowBackground"
        app:labelVisibilityMode="labeled"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineChart"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:text="Regional" />




</RelativeLayout>

